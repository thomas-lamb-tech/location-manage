{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "outputs": ["dist/**", ".next/**"]
    },
    "test": {
      "outputs": ["coverage/**"]
    },
    "typecheck": {
      "dependsOn": ["build"]
    },
    "lint": {
      "dependsOn": ["build"]
    }
  },
  "globalDependencies": ["**/tsconfig.json"]
}
